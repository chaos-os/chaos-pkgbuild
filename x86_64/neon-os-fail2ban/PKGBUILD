# Maintainer: pkg_maintainer <archlinuxpackagemaintainer@gmail.com>
pkgname=neon-os-fail2ban
pkgver=1.r24.f084a67
pkgrel=1
epoch=
pkgdesc="Fail2ban config file for neon-os"
arch=('x86_64')
url="https://www.gitlab.com/neon-os/neon-os-system-configs.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(neon-os-fail2ban)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    cd neon-os-system-configs
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd neon-os-system-configs
    mkdir -p ${pkgdir}/etc/fail2ban/
    install -Dm755 jail.conf "${pkgdir}/etc/fail2ban/jail.conf" 
    install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

