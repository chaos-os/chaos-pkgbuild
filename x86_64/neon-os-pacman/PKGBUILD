# Maintainer: pkg_maintainer <archlinuxpackagemaintainer@gmail.com>
pkgname=neon-os-pacman
pkgver=1.r25.1b2e117
pkgrel=1
epoch=
pkgdesc="Pacman config for neon-os"
arch=('x86_64')
url="https://gitlab.com/NEON-MMD/neon-os-system-configs.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(neon-os-pacman)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "${_pkgname}"
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd neon-os-system-configs
    mkdir -p ${pkgdir}/etc/
    install -Dm755 pacman.conf ${pkgdir}/etc/
    install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
    install -Dm643 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

