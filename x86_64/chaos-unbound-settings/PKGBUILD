# Maintainer: pkg_maintainer <archlinuxpackagemaintainer@gmail.com>
pkgname=chaos-unbound-settings
pkgver=1.r42.f95d92a
pkgrel=1
epoch=
pkgdesc="Unbound config for configuring self-hosted unbound dns server."
arch=('x86_64')
url="https://www.github.com/chaos-os/chaos-system-configs.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(chaos-unbound-settings)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd chaos-system-configs
	printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd chaos-system-configs
	mkdir -p "${pkgdir}/etc/unbound/"
	install -Dm755 unbound.conf ${pkgdir}/etc/unbound/unbound.conf
	install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
