# Maintainer: pkg_maintainer <archlinuxpackagemaintainer@gmail.com>
pkgname=neon-os-smartd
pkgver=1.r13.2927fcc
pkgrel=1
epoch=
pkgdesc="Smartd config for neon-os"
arch=('x86_64')
url="https://gitlab.com/neon-os/neon-os-system-configs.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(neon-os-smartd)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    cd neon-os-system-configs
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd neon-os-system-configs
    mkdir -p ${pkgdir}/etc/
    mkdir -p ${pkgdir}/usr/share/smartmontools/smartd_warning.d
    install -Dm755 smartd.conf ${pkgdir}/etc/
    install -Dm755 smartdnotify ${pkgdir}/usr/share/smartmontools/smartd_warning.d/
    install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
    install -Dm643 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

