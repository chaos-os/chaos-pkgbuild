# Maintainer: pkg_maintainer <archlinuxpackagemaintainer@gmail.com>
pkgname=neon-os-wol-disable
pkgver=1.r20.5a07899
pkgrel=1
epoch=
pkgdesc="wake-on-lan.conf file for neon-os to disable wol on NIC"
arch=('x86_64')
url="https://www.gitlab.com/neon-os/neon-os-system-configs.git"
license=('GPL3')
groups=()
depends=()
makedepends=(git)
checkdepends=()
optdepends=()
provides=(neon-os-wol-disable)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    cd neon-os-system-configs
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd neon-os-system-configs
    mkdir -p ${pkgdir}/etc/NetworkManager/conf.d/
    install -Dm755 wake-on-lan.conf "${pkgdir}/etc/NetworkManager/conf.d/wake-on-lan.conf" 
    install -Dm644 README.org "${pkgdir}/usr/share/doc/${pkgname}/README.org"
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

